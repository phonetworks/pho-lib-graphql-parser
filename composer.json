{
  "name": "phonetworks/pho-lib-graphql-parser",
  "type": "library",
  "description": "A general purpose GraphQL parser library in PHP",
   "keywords": [
        "graph",
        "network",
        "graphql",
        "parser"
    ],
  "homepage": "https://phonetworks.org",
  "license": "MIT",
  "authors": [
        {
            "name": "Emre Sokullu",
            "email": "emre@phonetworks.org",
            "homepage": "http://www.emresokullu.com"
        }
    ],
    "require": {
        "php":">=5.3.0",
        "webonyx/graphql-php": "^0.13.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
	    "phpdocumentor/phpdocumentor": "*" ,
        "psy/psysh": "*",
	    "squizlabs/php_codesniffer": "3.*",
	"roave/security-advisories": "dev-master"
        },
    "autoload": {
	     "psr-4": {
		       "Pho\\Lib\\GraphQL\\Parser\\": "src/Pho/Lib/GraphQL/Parser"
	     }
    },
    "autoload-dev": {
	     "psr-4": {
		       "Pho\\Lib\\GraphQL\\Parser\\": "tests/"
	     }
    }
}
